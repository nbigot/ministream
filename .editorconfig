# See: http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 2

[.go]
indent_size = 2
indent_style = tab

[*.{js,txt,md,css,html,php,json,sass,pug}]
indent_style = tab
indent_size = 2

[*.{yaml,yml,py}]
indent_style = space
indent_size = 4

[*.{diff,md}]
trim_trailing_whitespace = false
